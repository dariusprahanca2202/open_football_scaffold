<p id="notice"><%= notice %></p>

<h1> Team </h1>
<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Abbreviation:</strong>
  <%= @team.abbreviation %>
</p>

<h2> Manager </h2>
<p>
  <strong>Name:</strong>
  <%= @team.manager.name %>
</p>

<p>
  <strong>Hair color:</strong>
  <%= @team.manager.hair_color %>
</p>

<p>
  <strong>Anger level:</strong>
  <%= @team.manager.anger_level %>
</p>

<h2> Player </h2>
<% @team.players.each do |player| %>
<p>
  <strong>Name:</strong>
  <%= player.name %>
</p>

<p>
  <strong>Number:</strong>
  <%= player.number %>
</p>
<% end %>
<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
